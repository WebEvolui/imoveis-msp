---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro';
import PropertyCard from '../components/PropertyCard.astro';
import { properties } from '../data/properties';
import { siteConfig } from '../config/site';

export async function getStaticPaths() {
  return properties.map((property) => ({
    params: { slug: property.slug },
    props: { property },
  }));
}

const { property } = Astro.props;

// Get random related properties (excluding current) - Simple shuffle
const relatedProperties = properties
  .filter(p => p.id !== property.id)
  .sort(() => 0.5 - Math.random())
  .slice(0, 3);

const priceNumeric = Number(property.price.replace(/[^0-9,]/g, '').replace(',', '.'));

const schema = {
  "@context": "https://schema.org",
  "@type": "RealEstateListing",
  "name": property.title,
  "description": property.description_brief,
  "image": property.images.map(img => new URL(img, Astro.site).href),
  "datePublished": property.data_cadastro,
  "url": Astro.url.href,
  "offers": {
    "@type": "Offer",
    "price": isNaN(priceNumeric) ? "0" : priceNumeric,
    "priceCurrency": "BRL",
    "availability": "https://schema.org/InStock"
  }
};
---

<Layout 
  title={`${property.title} - ${siteConfig.name}`} 
  description={property.description_brief}
  image={property.images[0]}
  type="product"
>
  <script type="application/ld+json" slot="head" set:html={JSON.stringify(schema)} />
  <Header />
  
  <main class="bg-gray-50 pb-20">
    <!-- Mini Hero / Breadcrumb -->
    <div class="relative h-64 md:h-80 bg-gray-900 flex items-end">
        <!-- Background Image: Same as Home but smaller -->
        <div class="absolute inset-0 opacity-60">
             <img 
                src="https://images.unsplash.com/photo-1544984243-ec57ea16fe25?q=80&w=2000" 
                class="w-full h-full object-cover" 
                alt="Morro de São Paulo" 
             />
             <div class="absolute inset-0 bg-gradient-to-t from-gray-900/90 to-gray-900/20"></div>
        </div>
        
        <div class="relative container mx-auto px-4 pb-10 z-10 w-full">
            <nav class="text-sm text-gray-300 mb-4 font-medium flex items-center">
                <a href="/" class="hover:text-white hover:underline transition-colors">Home</a>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mx-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                <span class="text-white truncate font-semibold">{property.title}</span>
            </nav>
            <h1 class="text-3xl md:text-5xl font-bold text-white drop-shadow-2xl max-w-4xl leading-tight">
                {property.title}
            </h1>
        </div>
    </div>

    <div class="container mx-auto px-4 -mt-10 relative z-20">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">
        
        <!-- Main Content (Column 9) -->
        <div class="lg:col-span-8 space-y-10">
            <!-- Image Carousel -->
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-white/20 mt-6">
                <div class="relative aspect-video group cursor-grab active:cursor-grabbing">
                    <!-- Main Image Display -->
                     <div class="carousel w-full h-full flex overflow-x-auto snap-x snap-mandatory scroll-smooth p-0 no-scrollbar select-none" id="carousel">
                        {property.images.map((img, index) => (
                             <div class="w-full h-full flex-shrink-0 snap-center relative">
                                <img src={img} alt={`${property.title} - Foto ${index+1}`} class="w-full h-full object-cover pointer-events-none" />
                             </div>
                        ))}
                         {property.images.length === 0 && (
                            <div class="w-full h-full flex items-center justify-center bg-gray-100 text-gray-400">Sem fotos disponíveis</div>
                         )}
                     </div>
                     
                     <!-- Navigation Buttons -->
                      {(property.images.length > 1) && (
                        <>
                            <button 
                                id="prevBtn"
                                class="absolute left-4 top-1/2 -translate-y-1/2 bg-white/10 hover:bg-white/30 backdrop-blur-md text-white p-3 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300 shadow-lg border border-white/20"
                            >
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
                            </button>
                            <button 
                                id="nextBtn"
                                class="absolute right-4 top-1/2 -translate-y-1/2 bg-white/10 hover:bg-white/30 backdrop-blur-md text-white p-3 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300 shadow-lg border border-white/20"
                            >
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                            </button>
                        </>
                      )}
                      
                      <!-- Indicators -->
                       <div class="absolute bottom-6 left-0 right-0 flex justify-center space-x-2">
                          {property.images.map((_, index) => (
                              <div class="w-2 h-2 rounded-full bg-white/80 shadow-md backdrop-blur-sm"></div>
                          ))}
                       </div>
                </div>
            </div>

            <!-- Basic Info Blocks Mobile only -->
            <div class="lg:hidden bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
                <span class="inline-block bg-primary text-white text-xs px-3 py-1 rounded-full font-bold uppercase tracking-wide mb-2 shadow-sm">
                    {property.type}
                </span>
                <div class="text-3xl font-bold text-gray-900 mb-1">{property.price}</div>
            </div>

            <!-- Description -->
            <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
                <h2 class="text-2xl font-bold text-gray-800 mb-6 pb-4 border-b border-gray-50">Sobre o Imóvel</h2>
                
                <div class="prose prose-blue prose-lg max-w-none text-gray-600 leading-relaxed font-light" set:html={property.description} />
                
                <h3 class="text-lg font-bold text-gray-800 mt-10 mb-6">Características</h3>
                <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                     {property.features.map(feature => (
                         <div class="flex items-center text-gray-700 p-4 bg-gray-50 rounded-xl border border-gray-100 hover:border-primary-light transition-colors">
                             <div class="w-8 h-8 rounded-full bg-primary-light flex items-center justify-center mr-3 text-primary">
                                 <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                             </div>
                             <span class="font-medium text-sm">{feature}</span>
                         </div>
                     ))}
                </div>
            </div>

            <!-- Video -->
            {property.video && (
                <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6">Vídeo do Imóvel</h2>
                    <div class="aspect-video rounded-xl overflow-hidden bg-black shadow-lg">
                        <iframe 
                            src={property.video} 
                            title="YouTube video player" 
                            class="w-full h-full"
                            frameborder="0" 
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                            allowfullscreen>
                        </iframe>
                    </div>
                </div>
            )}
            
            <!-- CTA Section -->
            <div class="bg-primary text-white p-12 rounded-3xl shadow-xl text-center relative overflow-hidden">
                 <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"></div>
                 <div class="relative z-10">
                    <h2 class="text-2xl md:text-3xl font-bold mb-4">Gostou da opção?</h2>
                    <p class="text-blue-50 mb-8 max-w-xl mx-auto text-lg leading-relaxed">
                        Agende uma visita agora mesmo ou tire suas dúvidas com nosso corretor especialista.
                        Estamos prontos para te atender.
                    </p>
                    <a 
                        href={`https://wa.me/${siteConfig.whatsapp}?text=Olá,%20gostei%20do%20imóvel%20${property.title}%20(${property.slug})`}
                        target="_blank"
                        class="inline-flex items-center bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-8 rounded-full text-lg transition-all transform hover:scale-105 shadow-lg border border-transparent"
                    >
                        <svg class="w-6 h-6 mr-2 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.017-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487 2.982 1.288 3.646 1.026 4.316.963 1.144-.108 2.37-1.037 2.716-2.043.344-1.002.344-1.859.24-2.043z"/></svg>
                        Falar no WhatsApp
                    </a>
                 </div>
            </div>

        </div>

        <!-- Sidebar (Column 3) -->
        <div class="lg:col-span-4 space-y-8 mt-6 lg:sticky lg:top-24">
             <div class="bg-white p-6 rounded-2xl shadow-xl border border-gray-100 sticky top-24">
                <div class="mb-6 border-b border-gray-50 pb-6">
                    <span class="inline-block bg-primary text-white text-xs px-3 py-1 rounded-full font-bold uppercase tracking-wide mb-2 shadow-sm">
                        {property.type}
                    </span>
                    <p class="text-4xl lg:text-5xl font-extrabold text-brand-dark tracking-tight">{property.price}</p>
                    <p class="text-sm text-gray-400 mt-2 font-medium">Código: <span class="text-gray-600">#{property.id}</span></p>
                </div>
                
                <div class="space-y-3 mb-6">
                     <a 
                        href={`https://wa.me/${siteConfig.whatsapp}?text=Tenho interesse no imóvel ${property.title}`}
                        target="_blank"
                        class="flex items-center justify-center w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-xl transition-all shadow-lg hover:shadow-green-500/30 transform hover:-translate-y-1"
                     >
                         <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.017-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487 2.982 1.288 3.646 1.026 4.316.963 1.144-.108 2.37-1.037 2.716-2.043.344-1.002.344-1.859.24-2.043z"/></svg>
                         Conversar no WhatsApp
                     </a>
                     <a 
                        href={`tel:${siteConfig.phone.replace(/\D/g, '')}`}
                        class="flex items-center justify-center w-full bg-white text-gray-700 font-bold py-3 px-6 rounded-xl transition-all border-2 border-gray-200 hover:border-gray-300 hover:bg-gray-50"
                     >
                         <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                         Ligar Agora
                     </a>
                </div>

                <div class="flex items-center p-4 bg-gray-50 rounded-xl border border-gray-100">
                    <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-xl overflow-hidden shadow-sm border border-gray-100 text-brand-dark font-bold">
                         {siteConfig.brokerName.split(' ').map(n=>n[0]).join('')}
                    </div>
                    <div class="ml-4">
                        <p class="font-bold text-gray-900 text-sm">{siteConfig.brokerName}</p>
                        <p class="text-xs text-primary font-medium tracking-wide">CORRETOR CREDENCIADO</p>
                        <p class="text-xs text-gray-400 mt-0.5">CRECI: {siteConfig.creci}</p>
                    </div>
                </div>
             </div>
        </div>

      </div>
<script>
    // Carousel Drag Functionality
    const carousel = document.getElementById('carousel');
    let isDown = false;
    let startX;
    let scrollLeft;

    if (carousel) {
        carousel.addEventListener('mousedown', (e) => {
            isDown = true;
            carousel.classList.add('active');
            startX = e.pageX - carousel.offsetLeft;
            scrollLeft = carousel.scrollLeft;
        });

        carousel.addEventListener('mouseleave', () => {
            isDown = false;
            carousel.classList.remove('active');
        });

        carousel.addEventListener('mouseup', () => {
            isDown = false;
            carousel.classList.remove('active');
        });

        carousel.addEventListener('mousemove', (e) => {
            if (!isDown) return;
            e.preventDefault();
            const x = e.pageX - carousel.offsetLeft;
            const walk = (x - startX) * 2; // Scroll-fast
            carousel.scrollLeft = scrollLeft - walk;
        });
        
        // Button Navigation
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        
        if (prevBtn) {
            prevBtn.addEventListener('click', () => {
                carousel.scrollBy({left: -carousel.clientWidth, behavior: 'smooth'});
            });
        }
        
        if (nextBtn) {
             nextBtn.addEventListener('click', () => {
                carousel.scrollBy({left: carousel.clientWidth, behavior: 'smooth'});
            });
        }
    }
</script>
      
      <!-- Other Suggestions -->
      {relatedProperties.length > 0 && (
          <div class="mt-20">
              <h2 class="text-2xl font-bold text-gray-900 mb-8">Outras Sugestões para Você</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                  {relatedProperties.map(p => (
                      <PropertyCard property={p} />
                  ))}
              </div>
          </div>
      )}
    </div>
  </main>
  
  <Footer />
  <FloatingWhatsApp />
</Layout>
